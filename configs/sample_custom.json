{
  "model": {
    "vocab_size": 128,
    "d_model": 64,
    "n_layers": 2,
    "n_heads": 4,
    "max_seq_len": 128,
    "dropout": 0.1
  },
  "data": {
    "dataset_name": "custom",
    "train_file": "data/sample/train.txt",
    "tokenizer_type": "char",
    "max_length": 128,
    "stride": 64,
    "batch_size": 2,
    "num_workers": 0,
    "val_split": 0.2,
    "seed": 42
  },
  "training": {
    "num_epochs": 10,
    "learning_rate": 0.001,
    "weight_decay": 0.0,
    "warmup_steps": 5,
    "max_grad_norm": 1.0,
    "use_amp": false,
    "grad_accum_steps": 1,
    "eval_interval": 5,
    "save_interval": 50,
    "log_interval": 2
  },
  "experiment": {
    "name": "sample_custom_run",
    "description": "TinyGPT trained on small custom corpus",
    "tags": ["experiment", "custom", "char"]
  }
}
